<!-- src/main/resources/templates/index.mustache -->

{{>layout/header}}
<div class="container">
    <h1>기본 페이지</h1>
    <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
    <!--목록 출력 영역-->
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="row">게시글번호</th>
                <th>제목</th>
                <th>작성자</th>
                <th>작성일</th>
            </tr>
        </thead>
        <tbody>
            {{#posts}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{title}}</td>
                    <td>{{author}}</td>
                    <td>{{modifiedDate}}</td>
                </tr>
            {{/posts}}
        </tbody>
    </table>
</div>
{{>layout/footer}}